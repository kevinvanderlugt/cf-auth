<h1>Signup:</h1>

<% @user.errors.full_messages.each do |msg| %>
  <div class="error">
    <%= msg %>
  </div>
<% end %>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :name %></br>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %></br>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password %></br>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %></br>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit "Signup" %>
<% end %>
